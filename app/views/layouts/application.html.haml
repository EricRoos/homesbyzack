!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Praxis Homes: By Zack
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = javascript_include_tag "vendor/modernizr"
    = csrf_meta_tags
  %body
    .row.topBar
      .large-6.medium-5.small-8.columns.text-center
        = link_to root_path do
          = image_tag "textlogo.png", class: "top-logo"

      .medium-7.small-6.large-6.columns.text-right.navSection.show-for-medium-up
        %ul.nav
          %li.navItem
            =link_to "Blog",posts_path 
          %li.navItem
            Services
          %li.navItem
            About Us
          %li.navItem
            Contact Us
      .small-4.columns.show-for-small-only.smallNav
        %a.dropdownIcon{"aria-controls" => "drop1", "aria-expanded" => "false", "data-dropdown" => "drop1"}
          = fa_icon "navicon lg"
        %ul#drop1.f-dropdown{"aria-hidden" => "true", "data-dropdown-content" => "", :tabindex => "-1"}
          %li
            =link_to "Blog",posts_path 
          %li
            %a{:href => "#"} Services
          %li
            %a{:href => "#"} About Us
          %li
            %a{:href => "#"} Contact Us

    = yield
    %footer.row
      .large-12.columns
        .row
          .large-4.columns.text-center
            %h4 Connect with us:
            %ul
              %li= fa_icon "facebook 2x fw"
              %li= fa_icon "twitter 2x fw"
              %br
              %li= fa_icon "pinterest 2x fw"
              %li= fa_icon "instagram 2x fw"
          .large-4.columns.text-center
            %p 
              =image_tag "logo.png"
            %p 
              Phone: +1 (903) 641-1510<br/>
              Email: zack@praxishomestx.com
          .large-4.columns.text-center
            %h4 Navigation
            %ul.nav
              %li
                Home
              %li
                Blog Archive
              %li
                Contact Us
              %li
                Site Map
              %li
              -if is_admin?
                = link_to "Logout", destroy_user_session_path, method: :delete
              -else
                = link_to "Login", new_user_session_path
